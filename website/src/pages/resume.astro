<style>
  .resume-page {
    background: #f3f3f3;
    min-height: calc(100vh - 120px);
    padding: 2rem 1.5rem;
  }

  .resume {
    max-width: 900px;
    margin: 0 auto;
  }

  section {
    display: flex;
    border-top: 1px solid #dedede;
    padding: 1.5rem 0;
  }

  section:first-child {
    border-top: none;
  }

  .section-title {
    width: 25%;
    flex-shrink: 0;
  }

  .section-title h2 {
    font-family: "Rokkitt", serif;
    font-style: italic;
    font-size: 1.4rem;
    color: #cf8a05;
  }

  .section-content {
    flex: 1;
  }

  .section-content h3 {
    font-family: "Rokkitt", serif;
    font-size: 1.3rem;
    margin-bottom: 0.1rem;
  }

  .section-content p {
    color: #444;
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .sub-details {
    font-size: 0.85rem;
    font-style: italic;
    color: #666;
  }

  .section-content ul {
    margin: 0.5rem 0 1rem 1.2rem;
    color: #444;
    line-height: 1.6;
  }

  .section-content li {
    margin-bottom: 0.3rem;
  }

  .key-skills {
    columns: 2;
  }

  article + article {
    margin-top: 1.25rem;
  }

  @media (max-width: 600px) {
    section {
      flex-direction: column;
    }
    .section-title {
      width: 100%;
      margin-bottom: 0.5rem;
    }
    .key-skills {
      columns: 1;
    }
  }
</style>
